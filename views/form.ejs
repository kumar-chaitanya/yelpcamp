<% include partials/header %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <div class="card p-2">
        <form action="/campgrounds" method="POST">
          <div class="form-group">
            <label for="campname">Camp Name</label>
            <input type="text" class="form-control" id="campname" name="title" placeholder="camp name" required>
          </div>
          <div class="form-group">
            <label for="imageurl">Image URL</label>
            <input type="text" class="form-control" id="imageurl" name="src" placeholder="image url" required>
          </div>
          <div class="form-group">
            <label for="imgdesc">Description</label>
            <textarea id="imgdesc" class="form-control" placeholder="camp description" name="description"></textarea>
          </div>
          <button class="btn btn-dark btn-md">Submit</button>
          <a href="/campgrounds" class="btn btn-secondary btn-md float-right">Back</a>
        </form>
      </div>
    </div>
  </div>
</div>
<% include partials/footer %>