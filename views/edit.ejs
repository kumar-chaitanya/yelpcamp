<% include partials/header %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <h4 class="mb-2 text-center">Edit
        <%= camp.title %>
      </h4>
      <div class="card p-2">
        <form action="/campgrounds/<%= camp._id %>/?_method=PUT" method="POST">
          <div class="form-group">
            <label for="campname">Camp Name</label>
            <input type="text" class="form-control" id="campname" name="camp[title]" value="<%= camp.title %>" required>
          </div>
          <div class="form-group">
            <label for="imageurl">Image URL</label>
            <input type="text" class="form-control" id="imageurl" name="camp[src]" value="<%= camp.src %>" required>
          </div>
          <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="camp[location]" id="location" value="<%= camp.location %>" required>
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" name="camp[price]" id="price" value="<%= camp.price %>" step="0.1" min="2" required>
          </div>
          <div class="form-group">
            <label for="imgdesc">Description</label>
            <textarea id="imgdesc" class="form-control" name="camp[description]" required><%= camp.description %></textarea>
          </div>
          <button class="btn btn-success btn-md">Update</button>
          <a href="/campgrounds/<%= camp._id %>" class="btn btn-info btn-md float-right">Back</a>
        </form>
      </div>
    </div>
  </div>
</div>
<% include partials/footer %>