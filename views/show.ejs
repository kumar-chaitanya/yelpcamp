<% include partials/header %>
<div class="container">
  <div class="row">
    <div class="col-lg-4 col-md-3 mb-3">
      <ul class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </ul>
    </div>
    <div class="col-lg-8 col-md-9">
      <div class="card mb-3">
        <img class="card-img-top" src="<%= camp.src %>" alt="<%= camp.title %>">
        <div class="card-body">
          <h5 class="card-text float-right">$10.99</h5>
          <h4>
            <%= camp.title %>
          </h4>
          <p class="lead">
            <%= camp.description %>
          </p>
        </div>
      </div>
      <div class="d-flex justify-content-end mb-3">
        <a href="#" class="btn btn-success btn-md">Add New Comment</a>
      </div>
      <div class="card bg-light mb-3">
        <div class="row">
          <% camp.comments.forEach((comment) => { %>
            <div class="col-md-12">
              <div class="card-body">
                <strong>
                  <%= comment.author %>
                </strong>
                <p class="float-right">
                  <%= moment(comment.date).fromNow() %>
                </p>
                <p>
                  <%= comment.body %>
                </p>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
    <a href="/campgrounds" class="float-right">Go Back <i class="fas fa-arrow-right"></i></a>
  </div>
  <% include partials/footer %>