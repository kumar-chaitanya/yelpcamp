<% include partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <h4 class="text-center">Edit Comment</h4>
      <form action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>/?_method=PUT" method="POST">
        <textarea name="comment" id="comment" class="form-control mb-3"><%= comment.body %></textarea>
        <div class="d-flex justify-content-center">
          <button class="btn btn-md btn-info">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
